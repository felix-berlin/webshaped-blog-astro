{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules",
    "src/tests/**/*.spec.ts",
    "src/tests/**/*.test.ts"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@stores/*": ["src/store/*"],
      "@i18n/*": ["src/i18n/*"],
      "@ts_types/*": ["src/types/*"]
    },
    "types": ["vitest/globals"],
    // https://bobbyhadz.com/blog/typescript-module-can-only-be-default-imported-esmoduleinterop
    "esModuleInterop": true
  }
}

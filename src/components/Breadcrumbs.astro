---
interface BreadcrumbsProps {
  indexText: string;
}

const { indexText = 'Home' } = Astro.props as BreadcrumbsProps;

const paths = Astro.url.pathname.split('/').filter(crumb => crumb);
const ariaCurrent = Astro.request.url.pathname === '/' ? 'page' : undefined;

interface BreadcrumbItem {
  text: string;
  href: string;
  'aria-current'?: string;
}

let parts: Array<BreadcrumbItem> = [
  {
    text: indexText,
    href: '/',
    'aria-current': ariaCurrent
  }
];

paths.forEach((text, i) => {
  const href = `/${paths.slice(0, i + 1).join('/')}`;

  parts = [
    ...parts,
    {
      text: text.replace(/[-_]/g, ' '),
      href,
      'aria-current': ariaCurrent
    }
  ];
})
---

<nav aria-label="Breadcrumb" class="c-breadcrumb">
  <ol class="c-breadcrumb__crumbs">
    {
      parts.map(({ text, ...attrs }, index, array) =>
      <li class="c-breadcrumb__crumb">
        <a {...attrs}>{text}</a>
        {(Astro.slots.has('separator') && array.length - 1 !== index) && <slot name="separator"></slot>}
      </li>)
    }
  </ol>
</nav>

---
export interface Props {
  title: string;
  description: string;
  publishDate: string;
  url: string;
}

const { title, description, publishDate, url } = Astro.props as Props;
---

<article class="post-preview">
  <header>
    <time>{publishDate}</time>
    <a href={url}><h1 class="title">{title}</h1></a>
  </header>
  <p>{description}</p>
  <a href={url}>Read more</a>
</article>

<style></style>
